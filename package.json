{
  "name": "zola-api",
  "description": "zola.inkâ€™s API",
  "version": "0.1.1",
  "engines": {
    "node": "9",
    "npm": ">5.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "flow check && lint-staged",
      "pre-rewrite": "flow check && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add",
      "eslint --fix",
      "git add"
    ],
    "*.{json,graphql,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/database"
    ],
    "globalSetup": "<rootDir>/src/tests/globalSetup.js"
  },
  "scripts": {
    "heroku-prebuild": "./scripts/heroku-prebuild.sh",
    "heroku-postbuild": "npm run knex migrate:latest",
    "dev": "./scripts/dev.sh",
    "docker": "./scripts/docker.sh",
    "knex": "./scripts/knex.sh",
    "test": "./scripts/test.sh",
    "start": "node dist/index.js"
  },
  "devDependencies": {
    "apollo-cache-inmemory": "1.2.2",
    "apollo-client": "2.3.2",
    "apollo-link-schema": "1.1.0",
    "babel-cli": "6.26.0",
    "babel-eslint": "8.2.3",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-plugin-inline-import-graphql-ast": "2.4.1",
    "babel-plugin-module-resolver": "3.1.1",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.2",
    "babel-plugin-transform-flow-strip-types": "6.22.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "empty": "0.10.1",
    "eslint": "4.19.1",
    "eslint-config-prettier": "2.9.0",
    "eslint-config-standard": "11.0.0",
    "eslint-plugin-flowtype": "2.49.3",
    "eslint-plugin-import": "2.12.0",
    "eslint-plugin-node": "6.0.1",
    "eslint-plugin-promise": "3.8.0",
    "eslint-plugin-standard": "3.1.0",
    "flow-bin": "0.73.0",
    "graphql-tag": "2.9.2",
    "husky": "0.15.0-rc.13",
    "jest": "23.1.0",
    "lint-staged": "7.1.3",
    "prettier": "1.13.4"
  },
  "dependencies": {
    "@google-cloud/translate": "1.1.0",
    "apollo-server-express": "1.3.6",
    "bcrypt": "2.0.1",
    "body-parser": "1.18.3",
    "compression": "1.7.2",
    "cors": "2.8.4",
    "dotenv": "6.0.0",
    "express": "4.16.3",
    "graphql": "0.13.2",
    "graphql-tools": "3.0.2",
    "helmet": "3.12.1",
    "knex": "0.14.6",
    "nodemon": "1.17.5",
    "objection": "1.1.10",
    "pg": "7.4.3",
    "slug": "0.9.1",
    "validator": "10.3.0",
    "zxcvbn": "4.4.2"
  }
}
