{
  "name": "zola-api",
  "description": "zola.inkâ€™s API",
  "version": "0.1.1",
  "husky": {
    "hooks": {
      "pre-commit": "flow check && lint-staged",
      "pre-rewrite": "flow check && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add",
      "eslint --fix",
      "git add"
    ],
    "*.{json,graphql,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "src/server/database"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "scripts": {
    "dev": "./scripts/dev.sh",
    "docker": "./scripts/docker.sh",
    "knex": "./scripts/knex.sh",
    "test": "./scripts/test.sh"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-eslint": "8.2.3",
    "babel-plugin-add-module-exports": "0.2.1",
    "babel-plugin-inline-import-graphql-ast": "2.3.6",
    "babel-plugin-module-resolver": "3.1.1",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.0",
    "babel-plugin-transform-flow-strip-types": "6.22.0",
    "empty": "0.10.1",
    "eslint": "4.19.1",
    "eslint-config-prettier": "2.9.0",
    "eslint-config-standard": "11.0.0",
    "eslint-plugin-flowtype": "2.46.2",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-node": "6.0.1",
    "eslint-plugin-promise": "3.7.0",
    "eslint-plugin-standard": "3.0.1",
    "flow-bin": "0.70.0",
    "husky": "0.15.0-rc.13",
    "jest": "22.4.3",
    "lint-staged": "7.0.4",
    "prettier": "1.12.1"
  },
  "dependencies": {
    "apollo-server-express": "1.3.4",
    "bcrypt": "2.0.0",
    "body-parser": "1.18.2",
    "compression": "1.7.2",
    "dotenv": "5.0.1",
    "express": "4.16.3",
    "graphql": "0.13.2",
    "graphql-tools": "2.24.0",
    "helmet": "3.12.0",
    "knex": "0.14.6",
    "nodemon": "1.17.3",
    "pg": "7.4.1",
    "validator": "9.4.1",
    "zxcvbn": "4.4.2"
  }
}
